<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.db.mapper.FieldConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.db.entity.FieldConfig">
        <id column="field_name" property="fieldName" />
        <result column="type" property="type" />
        <result column="config" property="config" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        field_name AS "fieldName", type AS "type", config AS "config"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.db.model.result.FieldConfigResult" parameterType="cn.atsoft.dasheng.db.model.params.FieldConfigParam">
        select
        <include refid="Base_Column_List"/>
        from database_info_field_config where 1 = 1
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.db.model.params.FieldConfigParam">
        select
        <include refid="Base_Column_List"/>
        from database_info_field_config where 1 = 1
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.db.model.result.FieldConfigResult" parameterType="cn.atsoft.dasheng.db.model.params.FieldConfigParam">
        select
        <include refid="Base_Column_List"/>
        from database_info_field_config where 1 = 1
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.db.model.params.FieldConfigParam">
        select
        <include refid="Base_Column_List"/>
        from database_info_field_config where 1 = 1
    </select>

</mapper>
