<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.goods.brand.mapper.RestBrandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.goods.brand.entity.RestBrand">
        <id column="brand_id" property="brandId" />
        <result column="brand_name" property="brandName" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">deptId AS "deptId",
        brand_id AS "brandId", brand_name AS "brandName", create_time AS "createTime", update_time AS "updateTime", create_user AS "createUser", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.goods.brand.model.result.RestBrandResult" parameterType="cn.atsoft.dasheng.goods.brand.model.params.RestBrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where display = 1
            <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.goods.brand.model.params.RestBrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where display = 1
                <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                        and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.goods.brand.model.result.RestBrandResult" parameterType="cn.atsoft.dasheng.goods.brand.model.params.RestBrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where 1 = 1 and display = 1

        <if test="paramCondition.brandName != null">
            and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
        </if>
        <if test="paramCondition.deptId != null and paramCondition.deptId != 0">
            and deptId = #{paramCondition.deptId} or deptId in ( select dept_id from sys_dept where pids like
            CONCAT('%$[', #{paramCondition.deptId}, '$]%') escape '$' ))
        </if>

    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.goods.brand.model.params.RestBrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where display = 1
                <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                        and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
                </if>
    </select>

</mapper>
