<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.OrderDetailsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.OrderDetails">
        <id column="id" property="id" />
        <result column="payment_id" property="paymentId" />
        <result column="item_id" property="itemId" />
        <result column="number" property="number" />
        <result column="price" property="price" />
        <result column="order_id" property="orderId" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="deptId" property="deptId"/>
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">deptId AS "deptId",
        id AS "id", payment_id AS "paymentId", item_id AS "itemId", number AS "number", price AS "price", order_id AS "orderId", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.OrderDetailsResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderDetailsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_order_details where 1 = 1
            <if test="paramCondition.itemId != null">
                and item_id like CONCAT('%',#{paramCondition.itemId},'%')
            </if>
            <if test="paramCondition.orderId != null">
                and order_id like CONCAT('%',#{paramCondition.orderId},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderDetailsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_order_details where 1 = 1
                <if test="paramCondition.itemId != null">
                        and item_id like CONCAT('%',#{paramCondition.itemId},'%')
                </if>
                <if test="paramCondition.orderId != null">
                    and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.OrderDetailsResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderDetailsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_order_details where 1 = 1
                <if test="paramCondition.itemId != null">
                        and item_id like CONCAT('%',#{paramCondition.itemId},'%')
                </if>
                <if test="paramCondition.orderId != null">
                    and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderDetailsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_order_details where 1 = 1
                <if test="paramCondition.itemId != null">
                        and item_id like CONCAT('%',#{paramCondition.itemId},'%')
                </if>
                <if test="paramCondition.orderId != null">
                    and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
    </select>

</mapper>
