<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.QuotationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Quotation">
        <id column="quotation_id" property="quotationId"/>
        <result column="business_id" property="businessId"/>
        <result column="stock_id" property="stockId"/>
        <result column="money" property="money"/>
        <result column="number" property="number"/>
        <result column="stage" property="stage"/>
        <result column="time" property="time"/>
        <result column="note" property="note"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        time AS "time",iname  AS "iname",name AS "name",  note AS "note", quotation_id AS "quotationId", business_id AS "businessId", stock_id AS "stockId", money AS "money", number AS "number", stage AS "stage", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.QuotationResult"
            parameterType="cn.atsoft.dasheng.app.model.params.QuotationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_track where 1 = 1
        <if test="paramCondition.businessId != null">
            and business_id like CONCAT('%',#{paramCondition.businessId},'%')
        </if>
        <if test="paramCondition.stockId != null">
            and stock_id like CONCAT('%',#{paramCondition.stockId},'%')
        </if>
        <if test="paramCondition.stage != null">
            and stage = #{paramCondition.stage}
        </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.QuotationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_track where 1 = 1
        <if test="paramCondition.businessId != null">
            and business_id like CONCAT('%',#{paramCondition.businessId},'%')
        </if>
        <if test="paramCondition.stockId != null">
            and stock_id like CONCAT('%',#{paramCondition.stockId},'%')
        </if>
        <if test="paramCondition.stage != null">
            and stage = #{paramCondition.stage}
        </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.QuotationResult"
            parameterType="cn.atsoft.dasheng.app.model.params.QuotationParam">
        select
        <include refid="Base_Column_List"/>
        from quotation_view where 1 = 1
        <if test="paramCondition.businessId != null">
            and business_id like CONCAT('%',#{paramCondition.businessId},'%')
        </if>
        <if test="paramCondition.stockId != null">
            and stock_id like CONCAT('%',#{paramCondition.stockId},'%')
        </if>
        <if test="paramCondition.stage != null">
            and stage = #{paramCondition.stage}
        </if>
        <if test="paramCondition.iname != null">
            and iname like CONCAT('%',#{paramCondition.iname},'%')
        </if>
        <if test="paramCondition.name != null">
            and name like CONCAT('%',#{paramCondition.name},'%')
        </if>
        <if test="paramCondition.time != null">
            and time like CONCAT('%',#{paramCondition.time},'%')
        </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.QuotationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_track where 1 = 1
        <if test="paramCondition.businessId != null">
            and business_id like CONCAT('%',#{paramCondition.businessId},'%')
        </if>
        <if test="paramCondition.stockId != null">
            and stock_id like CONCAT('%',#{paramCondition.stockId},'%')
        </if>
        <if test="paramCondition.stage != null">
            and stage = #{paramCondition.stage}
        </if>
    </select>

</mapper>
