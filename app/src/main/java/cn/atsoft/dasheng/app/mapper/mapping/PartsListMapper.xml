<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.PartsListMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.PartsList">
        <id column="Parts_list_id" property="partsListId" />
        <result column="items" property="items" />
        <result column="name" property="name" />
        <result column="number" property="number" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        Parts_list_id AS "partsListId", items AS "items", name AS "name", number AS "number"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.PartsListResult" parameterType="cn.atsoft.dasheng.app.model.params.PartsListParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_parts_list where 1 = 1
            <if test="paramCondition.items != null">
                    and items = #{paramCondition.items}
            </if>
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
            <if test="paramCondition.number != null">
                and number like CONCAT('%',#{paramCondition.number},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.PartsListParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_parts_list where 1 = 1
                <if test="paramCondition.items != null">
                            and items = #{paramCondition.items}
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.number != null">
                        and number like CONCAT('%',#{paramCondition.number},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.PartsListResult" parameterType="cn.atsoft.dasheng.app.model.params.PartsListParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_parts_list where 1 = 1
                <if test="paramCondition.items != null">
                            and items = #{paramCondition.items}
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.number != null">
                        and number like CONCAT('%',#{paramCondition.number},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.PartsListParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_parts_list where 1 = 1
                <if test="paramCondition.items != null">
                        and items = #{paramCondition.items}
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.number != null">
                        and number like CONCAT('%',#{paramCondition.number},'%')
                </if>
    </select>

</mapper>
