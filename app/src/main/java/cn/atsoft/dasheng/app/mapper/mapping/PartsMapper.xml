<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.PartsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Parts">
        <id column="parts_id" property="partsId"/>
        <result column="item_id" property="itemId"/>
        <result column="brand_id" property="brandId"/>
        <result column="number" property="number"/>
        <result column="items" property="items"/>
        <result column="display" property="display"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
    items
        AS "items",
    parts_id AS "partsId", item_id AS "itemId", brand_id AS "brandId", number AS "number", display AS "display", create_time AS "createTime", update_time AS "updateTime", create_user AS "createUser", update_user AS "updateUser"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.PartsResult"
            parameterType="cn.atsoft.dasheng.app.model.params.PartsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_parts where 1 = 1

    </select>


    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.PartsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_parts where 1 = 1

    </select>


    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.PartsResult"
            parameterType="cn.atsoft.dasheng.app.model.params.PartsParam"
         >
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_parts
        where 1 = 1
        <if test="paramCondition.name != null">
            and name = #{paramCondition.name}
        </if>
        <if test="paramCondition.brandName != null">
            and brand_name = #{paramCondition.brandName}
        </if>


    </select>


</mapper>
