<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.ErpPackageTableMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.ErpPackageTable">
        <id column="id" property="id" />
        <result column="package_id" property="packageId" />
        <result column="package" property="package" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id AS "id", package_id AS "packageId", package AS "package", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.ErpPackageTableResult" parameterType="cn.atsoft.dasheng.app.model.params.ErpPackageTableParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_package_table where 1 = 1
            <if test="paramCondition.packageId != null">
                and package_id like CONCAT('%',#{paramCondition.packageId},'%')
            </if>
            <if test="paramCondition.package != null and paramCondition.package != ''">
                and package like CONCAT('%',#{paramCondition.package},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ErpPackageTableParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_package_table where 1 = 1
                <if test="paramCondition.packageId != null">
                        and package_id like CONCAT('%',#{paramCondition.packageId},'%')
                </if>
                <if test="paramCondition.package != null and paramCondition.package != ''">
                        and package like CONCAT('%',#{paramCondition.package},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.ErpPackageTableResult" parameterType="cn.atsoft.dasheng.app.model.params.ErpPackageTableParam">
