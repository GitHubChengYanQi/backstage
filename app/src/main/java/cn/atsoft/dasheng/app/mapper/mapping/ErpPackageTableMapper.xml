        <include refid="Base_Column_List"/>
        from daoxin_erp_package_table where 1 = 1
                <if test="paramCondition.packageId != null">
                        and package_id like CONCAT('%',#{paramCondition.packageId},'%')
                </if>
                <if test="paramCondition.package != null and paramCondition.package != ''">
                        and package like CONCAT('%',#{paramCondition.package},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ErpPackageTableParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_package_table where 1 = 1
                <if test="paramCondition.packageId != null">
                        and package_id like CONCAT('%',#{paramCondition.packageId},'%')
                </if>
