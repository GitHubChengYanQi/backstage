<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.ClientMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Client">
        <id column="client_id" property="clientId" />
        <result column="name" property="name" />
        <result column="adress_id" property="adressId" />
        <result column="contacts_id" property="contactsId" />
        <result column="tel" property="tel" />
        <result column="setup" property="setup" />
        <result column="legal" property="legal" />
        <result column="utscc" property="utscc" />
        <result column="company_type" property="companyType" />
        <result column="business_term" property="businessTerm" />
        <result column="sign_in" property="signIn" />
        <result column="introduction" property="introduction" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        client_id AS "clientId", name AS "name", adress_id AS "adressId", contacts_id AS "contactsId", tel AS "tel", setup AS "setup", legal AS "legal", utscc AS "utscc", company_type AS "companyType", business_term AS "businessTerm", sign_in AS "signIn", introduction AS "introduction", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.ClientResult" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
            <if test="paramCondition.companyType != null and paramCondition.companyType != ''">
                and company_type like CONCAT('%',#{paramCondition.companyType},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.companyType != null and paramCondition.companyType != ''">
                        and company_type like CONCAT('%',#{paramCondition.companyType},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.ClientResult" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.companyType != null and paramCondition.companyType != ''">
                        and company_type like CONCAT('%',#{paramCondition.companyType},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.companyType != null and paramCondition.companyType != ''">
                        and company_type like CONCAT('%',#{paramCondition.companyType},'%')
                </if>
    </select>

</mapper>
