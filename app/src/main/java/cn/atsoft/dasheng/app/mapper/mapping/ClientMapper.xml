<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.ClientMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Client">
        <id column="client_id" property="clientId" />
        <result column="name" property="name" />
        <result column="adress" property="adress" />
        <result column="phone" property="phone" />
        <result column="order_id" property="orderId" />
        <result column="order_time" property="orderTime" />
        <result column="price" property="price" />
        <result column="logistics_id" property="logisticsId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        client_id AS "clientId", name AS "name", adress AS "adress", phone AS "phone", order_id AS "orderId", order_time AS "orderTime", price AS "price", logistics_id AS "logisticsId", create_time AS "createTime", update_time AS "updateTime", create_user AS "createUser", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.ClientResult" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.ClientResult" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.ClientParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_client where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

</mapper>
