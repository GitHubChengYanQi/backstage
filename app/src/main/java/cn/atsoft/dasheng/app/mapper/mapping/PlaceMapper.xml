<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.PlaceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Place">
        <id column="palce_id" property="palceId" />
        <result column="name" property="name" />
        <result column="position" property="position" />
        <result column="palce" property="palce" />
        <result column="measure" property="measure" />
        <result column="capacity" property="capacity" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        palce_id AS "palceId", name AS "name", position AS "position", palce AS "palce", measure AS "measure", capacity AS "capacity", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.PlaceResult" parameterType="cn.atsoft.dasheng.app.model.params.PlaceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_place where 1 = 1
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.PlaceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_place where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.PlaceResult" parameterType="cn.atsoft.dasheng.app.model.params.PlaceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_place where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.PlaceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_place where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

</mapper>
