<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.LalMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Lal">
        <id column="lal_id" property="lalId" />
        <result column="name" property="name" />
        <result column="ew_itude" property="ewItude" />
        <result column="sn_itude" property="snItude" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        name AS "name", lal_id AS "lalId", ew_itude AS "ewItude", sn_itude AS "snItude", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.LalResult" parameterType="cn.atsoft.dasheng.app.model.params.LalParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_lal where 1 = 1
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.LalParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_lal where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.LalResult" parameterType="cn.atsoft.dasheng.app.model.params.LalParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_lal where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.LalParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_lal where 1 = 1
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
    </select>

</mapper>
