<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.BrandMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Brand">
        <id column="brand_id" property="brandId" />
        <result column="brand_name" property="brandName" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        brand_id AS "brandId", brand_name AS "brandName", create_time AS "createTime", update_time AS "updateTime", create_user AS "createUser", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.BrandResult" parameterType="cn.atsoft.dasheng.app.model.params.BrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where 1 = 1
            <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.BrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where 1 = 1
                <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                        and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.BrandResult" parameterType="cn.atsoft.dasheng.app.model.params.BrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where 1 = 1 and display = 1
                <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                        and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.BrandParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_brand where 1 = 1
                <if test="paramCondition.brandName != null and paramCondition.brandName != ''">
                        and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
                </if>
    </select>

</mapper>
