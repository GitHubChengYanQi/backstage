<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.AdressMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Adress">
        <id column="adress_id" property="adressId" />
        <result column="location" property="location" />
        <result column="longitude" property="longitude" />
        <result column="latitude" property="latitude" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
        <result column="deptId" property="deptId" />
        <result column="client_id" property="clientId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        adress_id AS "adressId", location AS "location", longitude AS "longitude", latitude AS "latitude", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display", deptId AS "deptId", client_id AS "clientId"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.AdressResult" parameterType="cn.atsoft.dasheng.app.model.params.AdressParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_adress where 1 = 1
            <if test="paramCondition.clientId != null">
                    and client_id = #{paramCondition.clientId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.AdressParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_adress where 1 = 1
                <if test="paramCondition.clientId != null">
                            and client_id = #{paramCondition.clientId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.AdressResult" parameterType="cn.atsoft.dasheng.app.model.params.AdressParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_adress where 1 = 1
                <if test="paramCondition.clientId != null">
                            and client_id = #{paramCondition.clientId}
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.AdressParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_adress where 1 = 1
                <if test="paramCondition.clientId != null">
                        and client_id = #{paramCondition.clientId}
                </if>
    </select>

</mapper>
