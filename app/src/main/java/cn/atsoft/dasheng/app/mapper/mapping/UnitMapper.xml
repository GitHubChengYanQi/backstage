<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.UnitMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Unit">
        <id column="unit_id" property="unitId" />
        <result column="unit_name" property="unitName" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
        <result column="deptId" property="deptId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        unit_id AS "unitId", unit_name AS "unitName", create_user AS "createUser", create_time AS "createTime", update_user AS "updateUser", update_time AS "updateTime", display AS "display", deptId AS "deptId"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.UnitResult" parameterType="cn.atsoft.dasheng.app.model.params.UnitParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_unit where 1 = 1
            <if test="paramCondition.unitName != null and paramCondition.unitName != ''">
                and unit_name like CONCAT('%',#{paramCondition.unitName},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.UnitParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_unit where 1 = 1
                <if test="paramCondition.unitName != null and paramCondition.unitName != ''">
                        and unit_name like CONCAT('%',#{paramCondition.unitName},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.UnitResult" parameterType="cn.atsoft.dasheng.app.model.params.UnitParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_unit where display = 1
                <if test="paramCondition.unitName != null and paramCondition.unitName != ''">
                        and unit_name like CONCAT('%',#{paramCondition.unitName},'%')
                </if>
        order by create_time desc
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.UnitParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_unit where 1 = 1
                <if test="paramCondition.unitName != null and paramCondition.unitName != ''">
                        and unit_name like CONCAT('%',#{paramCondition.unitName},'%')
                </if>
    </select>

</mapper>
