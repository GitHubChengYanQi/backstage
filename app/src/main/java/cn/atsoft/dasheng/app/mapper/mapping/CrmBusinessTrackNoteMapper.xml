<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.CrmBusinessTrackNoteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.CrmBusinessTrackNote">
        <id column="note_id" property="noteId" />
        <result column="account" property="account" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        note_id AS "noteId", account AS "account", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.CrmBusinessTrackNoteResult" parameterType="cn.atsoft.dasheng.app.model.params.CrmBusinessTrackNoteParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_track_note where 1 = 1
            <if test="paramCondition.noteId != null">
                    and note_id = #{paramCondition.noteId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.CrmBusinessTrackNoteParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_track_note where 1 = 1
                <if test="paramCondition.noteId != null">
                            and note_id = #{paramCondition.noteId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.CrmBusinessTrackNoteResult" parameterType="cn.atsoft.dasheng.app.model.params.CrmBusinessTrackNoteParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_track_note where 1 = 1
                <if test="paramCondition.noteId != null">
                            and note_id = #{paramCondition.noteId}
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.CrmBusinessTrackNoteParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_track_note where 1 = 1
                <if test="paramCondition.noteId != null">
                        and note_id = #{paramCondition.noteId}
                </if>
    </select>

</mapper>
