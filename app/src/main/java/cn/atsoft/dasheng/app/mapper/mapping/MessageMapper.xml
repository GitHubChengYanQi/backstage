<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.MessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Message">
        <id column="message_id" property="messageId" />
        <result column="time" property="time" />
        <result column="state" property="state" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="type" property="type" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
        <result column="sort" property="sort" />
        <result column="deptId" property="deptId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">deptId AS "deptId",
        message_id AS "messageId", time AS "time", state AS "state", title AS "title", content AS "content", type AS "type", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display", sort AS "sort"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.MessageResult" parameterType="cn.atsoft.dasheng.app.model.params.MessageParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_message where display = 1
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.MessageParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_message where display = 1
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.MessageResult" parameterType="cn.atsoft.dasheng.app.model.params.MessageParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_message where display = 1
        <if test="paramCondition.deptId != null and paramCondition.deptId != 0">
            and deptId = #{paramCondition.deptId} or deptId in ( select dept_id from sys_dept where pids like
            CONCAT('%$[', #{paramCondition.deptId}, '$]%') escape '$' ))
        </if>
        order by create_time desc
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.MessageParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_message where display = 1
    </select>

</mapper>
