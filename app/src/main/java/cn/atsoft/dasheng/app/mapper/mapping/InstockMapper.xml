<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.InstockMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Instock">
        <id column="instock_id" property="instockId" />
        <result column="item_id" property="itemId" />
        <result column="palce_id" property="palceId" />
        <result column="register_time" property="registerTime" />
        <result column="number" property="number" />
        <result column="price" property="price" />
        <result column="brand_id" property="brandId" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        placeName AS "placeName" ,palce_id AS "palceId" , name AS "name", brand_name AS "brandName",  instock_id AS "instockId", item_id AS "itemId", register_time AS "registerTime", number AS "number", price AS "price", brand_id AS "brandId", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.InstockResult" parameterType="cn.atsoft.dasheng.app.model.params.InstockParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_instock where 1 = 1
            <if test="paramCondition.itemId != null">
                    and item_id = #{paramCondition.itemId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.InstockParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_instock where 1 = 1
                <if test="paramCondition.itemId != null">
                            and item_id = #{paramCondition.itemId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.InstockResult" parameterType="cn.atsoft.dasheng.app.model.params.InstockParam">
        select
        <include refid="Base_Column_List"/>
        from instock_view where 1 = 1
                <if test="paramCondition.itemId != null">
                and item_id = #{paramCondition.itemId}
                </if>
        <if test="paramCondition.name!=null">
            and name like CONCAT('%',#{paramCondition.name},'%')
        </if>
        <if test="paramCondition.brandName!=null">
            and brand_name like CONCAT('%',#{paramCondition.brandName},'%')
        </if>
        <if test="paramCondition.registerTime!=null">
            and register_time like CONCAT('%',#{paramCondition.registerTime},'%')
        </if>
        <if test="paramCondition.placeName!=null">
            and placeName like CONCAT('%',#{paramCondition.placeName},'%')
        </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.InstockParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_erp_instock where 1 = 1
                <if test="paramCondition.itemId != null">
                        and item_id = #{paramCondition.itemId}
                </if>
    </select>

</mapper>
