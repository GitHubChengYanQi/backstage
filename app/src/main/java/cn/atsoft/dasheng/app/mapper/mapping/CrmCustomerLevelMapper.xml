<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.CrmCustomerLevelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.CrmCustomerLevel">

        <id column="customer_level_id" property="customerLevelId" />
        <result column="level" property="level" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
        <result column="rank" property="rank"/>
     </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">rank AS "rank",
        customer_level_id AS "customerLevelId", level AS "level", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.CrmCustomerLevelResult" parameterType="cn.atsoft.dasheng.app.model.params.CrmCustomerLevelParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_customer_level where display = 1
            <if test="paramCondition.customerLevelId != null">
                    and customer_level_id = #{paramCondition.customerLevelId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.CrmCustomerLevelParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_customer_level where display = 1
                <if test="paramCondition.customerLevelId != null">
                            and customer_level_id = #{paramCondition.customerLevelId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.CrmCustomerLevelResult" parameterType="cn.atsoft.dasheng.app.model.params.CrmCustomerLevelParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_customer_level where display = 1
                <if test="paramCondition.customerLevelId != null">
                            and customer_level_id = #{paramCondition.customerLevelId}
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.CrmCustomerLevelParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_customer_level where display = 1
                <if test="paramCondition.customerLevelId != null">
                        and customer_level_id = #{paramCondition.customerLevelId}
                </if>
    </select>

</mapper>
