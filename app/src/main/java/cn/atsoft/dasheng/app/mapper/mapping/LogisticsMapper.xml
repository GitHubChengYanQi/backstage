<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.LogisticsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Logistics">
        <id column="logistics_id" property="logisticsId" />
        <result column="order_id" property="orderId" />
        <result column="client_id" property="clientId" />
        <result column="position" property="position" />
        <result column="outtime" property="outtime" />
        <result column="adress" property="adress" />
        <result column="phone" property="phone" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        outtime AS "outtime" ,logistics_id AS "logisticsId", order_id AS "orderId", client_id AS "clientId", position AS "position", adress AS "adress", phone AS "phone", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.LogisticsResult" parameterType="cn.atsoft.dasheng.app.model.params.LogisticsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_logistics where 1 = 1
            <if test="paramCondition.orderId != null">
                    and order_id = #{paramCondition.orderId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.LogisticsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_logistics where 1 = 1
                <if test="paramCondition.orderId != null">
                            and order_id = #{paramCondition.orderId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.LogisticsResult" parameterType="cn.atsoft.dasheng.app.model.params.LogisticsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_logistics where 1 = 1
                <if test="paramCondition.orderId != null">
                            and order_id = #{paramCondition.orderId}
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.LogisticsParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_logistics where 1 = 1
                <if test="paramCondition.orderId != null">
                        and order_id = #{paramCondition.orderId}
                </if>
    </select>

</mapper>
