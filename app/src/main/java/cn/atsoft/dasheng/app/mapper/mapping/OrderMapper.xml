<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Order">
        <id column="order_id" property="orderId" />
        <result column="outbound_id" property="outboundId" />
        <result column="consignor" property="consignor" />
        <result column="shipping" property="shipping" />
        <result column="price" property="price" />
        <result column="weight" property="weight" />
        <result column="area" property="area" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id AS "orderId", outbound_id AS "outboundId", consignor AS "consignor", shipping AS "shipping", price AS "price", weight AS "weight", area AS "area", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.OrderResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
            <if test="paramCondition.outboundId != null">
                    and outbound_id = #{paramCondition.outboundId}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.outboundId != null">
                            and outbound_id = #{paramCondition.outboundId}
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.OrderResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.outboundId != null">
                            and outbound_id = #{paramCondition.outboundId}
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.outboundId != null">
                        and outbound_id = #{paramCondition.outboundId}
                </if>
    </select>

</mapper>
