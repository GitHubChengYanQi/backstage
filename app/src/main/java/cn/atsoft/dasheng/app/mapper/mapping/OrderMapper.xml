<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.entity.Order">
        <id column="id" property="id" />
        <result column="order_id" property="orderId" />
        <result column="name" property="name" />
        <result column="adress_id" property="adressId" />
        <result column="numbers" property="numbers" />
        <result column="state" property="state" />
        <result column="phone" property="phone" />
        <result column="order_time" property="orderTime" />
        <result column="pay_time" property="payTime" />
        <result column="delivery_time" property="deliveryTime" />
        <result column="total" property="total" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id AS "id", order_id AS "orderId", name AS "name", adress_id AS "adressId", numbers AS "numbers", state AS "state", phone AS "phone", order_time AS "orderTime", pay_time AS "payTime", delivery_time AS "deliveryTime", total AS "total", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.model.result.OrderResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
            <if test="paramCondition.orderId != null">
                and order_id like CONCAT('%',#{paramCondition.orderId},'%')
            </if>
            <if test="paramCondition.name != null and paramCondition.name != ''">
                and name like CONCAT('%',#{paramCondition.name},'%')
            </if>
            <if test="paramCondition.state != null and paramCondition.state != ''">
                    and state = #{paramCondition.state}
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.orderId != null">
                        and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.state != null and paramCondition.state != ''">
                  and state like CONCAT('%',#{paramCondition.state},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.model.result.OrderResult" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.orderId != null">
                        and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.state != null and paramCondition.state != ''">
                  and state like CONCAT('%',#{paramCondition.state},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.app.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_order where 1 = 1
                <if test="paramCondition.orderId != null">
                        and order_id like CONCAT('%',#{paramCondition.orderId},'%')
                </if>
                <if test="paramCondition.name != null and paramCondition.name != ''">
                        and name like CONCAT('%',#{paramCondition.name},'%')
                </if>
                <if test="paramCondition.state != null and paramCondition.state != ''">
                  and state like CONCAT('%',#{paramCondition.state},'%')
                </if>
    </select>

</mapper>
