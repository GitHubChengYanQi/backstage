<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.app.cloude.portal.mapper.PortalBannerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.app.cloude.portal.entity.PortalBanner">
        <id column="banner_id" property="bannerId"/>
        <result column="img_url" property="imgUrl"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="display" property="display"/>
        <result column="title" property="title"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List"> title
    AS "title",
        banner_id AS "bannerId", img_url AS "imgUrl", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.app.cloude.portal.model.result.PortalBannerResult"
            parameterType="cn.atsoft.dasheng.app.cloude.portal.model.params.PortalBannerParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner where 1 = 1
    </select>

    <select id="customMapList" resultType="map"
            parameterType="cn.atsoft.dasheng.app.cloude.portal.model.params.PortalBannerParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner where 1 = 1
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.app.cloude.portal.model.result.PortalBannerResult"
            parameterType="cn.atsoft.dasheng.app.cloude.portal.model.params.PortalBannerParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner where 1 = 1
    </select>

    <select id="customPageMapList" resultType="map"
            parameterType="cn.atsoft.dasheng.app.cloude.portal.model.params.PortalBannerParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner where 1 = 1
    </select>

</mapper>
