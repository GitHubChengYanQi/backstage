<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.crm.mapper.PlanMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.crm.entity.Plan">
        <id column="sales_process_plan_id" property="salesProcessPlanId" />
        <result column="time" property="time" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
        <result column="deptId" property="deptId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">deptId AS "deptId",
        sales_process_plan_id AS "salesProcessPlanId", time AS "time", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.crm.model.result.PlanResult" parameterType="cn.atsoft.dasheng.crm.model.params.PlanParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_sales_process_plan where 1 = 1


    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.crm.model.params.PlanParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_sales_process_plan where 1 = 1


    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.crm.model.result.PlanResult" parameterType="cn.atsoft.dasheng.crm.model.params.PlanParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_sales_process_plan where 1 = 1
        <if test="paramCondition.deptId != null and paramCondition.deptId != 0">
            and deptId = #{paramCondition.deptId} or deptId in ( select dept_id from sys_dept where pids like
            CONCAT('%$[', #{paramCondition.deptId}, '$]%') escape '$' ))
        </if>


    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.crm.model.params.PlanParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_business_sales_process_plan where 1 = 1


    </select>

</mapper>
