<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.crm.mapper.DataClassificationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.crm.entity.DataClassification">
        <id column="data_classification_id" property="dataClassificationId" />
        <result column="title" property="title" />
        <result column="sort" property="sort" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        data_classification_id AS "dataClassificationId", title AS "title", sort AS "sort", create_user AS "createUser", update_user AS "updateUser", create_time AS "createTime", update_time AS "updateTime", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.crm.model.result.DataClassificationResult" parameterType="cn.atsoft.dasheng.crm.model.params.DataClassificationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_data_classification where 1 = 1
            <if test="paramCondition.dataClassificationId != null">
                and data_classification_id like CONCAT('%',#{paramCondition.dataClassificationId},'%')
            </if>
            <if test="paramCondition.title != null and paramCondition.title != ''">
                and title like CONCAT('%',#{paramCondition.title},'%')
            </if>
            <if test="paramCondition.sort != null">
                and sort like CONCAT('%',#{paramCondition.sort},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.crm.model.params.DataClassificationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_data_classification where 1 = 1
                <if test="paramCondition.dataClassificationId != null">
                        and data_classification_id like CONCAT('%',#{paramCondition.dataClassificationId},'%')
                </if>
                <if test="paramCondition.title != null and paramCondition.title != ''">
                        and title like CONCAT('%',#{paramCondition.title},'%')
                </if>
                <if test="paramCondition.sort != null">
                        and sort like CONCAT('%',#{paramCondition.sort},'%')
                </if>
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.crm.model.result.DataClassificationResult" parameterType="cn.atsoft.dasheng.crm.model.params.DataClassificationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_data_classification where 1 = 1
                <if test="paramCondition.dataClassificationId != null">
                        and data_classification_id like CONCAT('%',#{paramCondition.dataClassificationId},'%')
                </if>
                <if test="paramCondition.title != null and paramCondition.title != ''">
                        and title like CONCAT('%',#{paramCondition.title},'%')
                </if>
                <if test="paramCondition.sort != null">
                        and sort like CONCAT('%',#{paramCondition.sort},'%')
                </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.crm.model.params.DataClassificationParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_crm_data_classification where 1 = 1
                <if test="paramCondition.dataClassificationId != null">
                        and data_classification_id like CONCAT('%',#{paramCondition.dataClassificationId},'%')
                </if>
                <if test="paramCondition.title != null and paramCondition.title != ''">
                        and title like CONCAT('%',#{paramCondition.title},'%')
                </if>
                <if test="paramCondition.sort != null">
                        and sort like CONCAT('%',#{paramCondition.sort},'%')
                </if>
    </select>

</mapper>
