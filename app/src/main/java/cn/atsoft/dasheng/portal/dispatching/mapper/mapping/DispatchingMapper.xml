<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.portal.dispatching.mapper.DispatchingMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.portal.dispatching.entity.Dispatching">
        <id column="dispatching_id" property="dispatchingId" />
        <result column="name" property="name" />
        <result column="phone" property="phone" />
        <result column="time" property="time" />
        <result column="address" property="address" />
        <result column="state" property="state" />
        <result column="note" property="note" />
        <result column="imgUrl" property="imgUrl" />
        <result column="evaluation" property="evaluation" />
        <result column="repair_id" property="repairId" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        dispatching_id AS "dispatchingId", name AS "name", phone AS "phone", time AS "time", address AS "address", state AS "state", note AS "note", imgUrl AS "imgUrl", evaluation AS "evaluation", repair_id AS "repairId", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.portal.dispatching.model.result.DispatchingResult" parameterType="cn.atsoft.dasheng.portal.dispatching.model.params.DispatchingParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_dispatching where 1 = 1
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.portal.dispatching.model.params.DispatchingParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_dispatching where 1 = 1
    </select>

    <select id="customPageList" resultType="cn.atsoft.dasheng.portal.dispatching.model.result.DispatchingResult" parameterType="cn.atsoft.dasheng.portal.dispatching.model.params.DispatchingParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_dispatching where 1 = 1
        <if test="paramCondition.repairId != null">
            and repair_id = #{paramCondition.repairId}
        </if>
    </select>

    <select id="customPageMapList" resultType="map" parameterType="cn.atsoft.dasheng.portal.dispatching.model.params.DispatchingParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_dispatching where 1 = 1
    </select>

</mapper>
