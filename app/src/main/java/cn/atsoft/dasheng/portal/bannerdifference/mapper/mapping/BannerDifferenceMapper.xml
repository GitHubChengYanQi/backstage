<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.atsoft.dasheng.portal.bannerdifference.mapper.BannerDifferenceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.atsoft.dasheng.portal.bannerdifference.entity.BannerDifference">
        <id column="classification_id" property="classificationId" />
        <result column="difference" property="difference" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser" />
        <result column="update_time" property="updateTime" />
        <result column="update_user" property="updateUser" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        classification_id AS "classificationId", difference AS "difference", create_time AS "createTime", create_user AS "createUser", update_time AS "updateTime", update_user AS "updateUser", display AS "display"
    </sql>


    <select id="customList" resultType="cn.atsoft.dasheng.portal.bannerdifference.model.result.BannerDifferenceResult" parameterType="cn.atsoft.dasheng.portal.bannerdifference.model.params.BannerDifferenceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner_difference where 1 = 1
            <if test="paramCondition.difference != null">
                and difference like CONCAT('%',#{paramCondition.difference},'%')
            </if>
    </select>

    <select id="customMapList" resultType="map" parameterType="cn.atsoft.dasheng.portal.bannerdifference.model.params.BannerDifferenceParam">
        select
        <include refid="Base_Column_List"/>
        from daoxin_portal_banner_difference where 1 = 1
                <if test="paramCondition.difference != null">
                        and difference like CONCAT('%',#{paramCondition.difference},'%')
                </if>
    </select>

